#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import Factory kivy.factory.Factory

ScreenManagement:
	transition: FadeTransition()
	MainScreen:
	Mapa:
	Lista:
#####################################	

#############################################
<MainScreen>:
	canvas:
        Rectangle:
            source: 'xxx.jpg'
            pos: self.pos
            size: self.size
	name:"main"
	color: 0.596,0.9843,0.596,1
	BoxLayout:
		id: box
		size: root.size

		
		FloatLayout:
		    Button:
				text: "Strona\nGowna"
				size_hint:0.34,0.06
				pos_hint:{"x":0,"y":0}
				on_release: app.root.current= "main"
				background_color:root.color
			Button:
				text: "Mapa"
				size_hint:0.34,0.06
				pos_hint:{"x":0.33,"y":0}
				on_release: app.root.current= "mapa"
				background_color:root.color
			Button:
				text: "Lista"
				size_hint:0.34,0.06
				pos_hint:{"x":0.66,"y":0}
				on_release: app.root.current= "lista"
				background_color:root.color
	BoxLayout:

	    Button:
			text: "TWOJ SENSOR WS 2,5-10 Z SENSORA"
			background_color: 0,0,0,1
			size_hint:0.1,0.3
			pos_hint:{"left":1,"top":0.95}
			on_release: app.root.current= "main"
	BoxLayout:

	    Button:
			text: "Wykres/Hisotia poziomu zanieczyszczen w skali czasu"
			background_color: 0,0,0,1
			size_hint:0.1,0.3
			pos_hint:{"left":1,"top":0.60}
			on_release: app.root.current= "main"
	BoxLayout:

	    Button:
			text: "Year"
			background_color:root.color
			size_hint:0.34,0.04
			pos_hint:{"left":1,"top":0.303}
			on_release: app.root.current= "main"
		Button:
			text: "3 Month"
			background_color:root.color
			size_hint:0.34,0.04
			pos_hint:{"left":1,"top":0.303}
			on_release: app.root.current= "main"
		Button:
			text: "Month"
			background_color:root.color
			size_hint:0.34,0.04
			pos_hint:{"left":0.9,"top":0.303}
			on_release: app.root.current= "main"
		Button:
			text: "Week"
			background_color:root.color
			size_hint:0.34,0.04
			pos_hint:{"left":1,"top":0.303}
			on_release: app.root.current= "main"
		Button:
			text: "Today"
			background_color:root.color
			size_hint:0.34,0.04
			pos_hint:{"left":1,"top":0.303}
			on_release: app.root.current= "main"








