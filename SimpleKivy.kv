#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import Factory kivy.factory.Factory

ScreenManagement:
	transition: FadeTransition()
	MainScreen:
	Mapa:
	Lista:
#####################################	

#############################################
<MainScreen>:
	canvas:
        Rectangle:
            source: 'ok.jpg'
            pos: self.pos
            size: self.size
	name:"main"
	color: 0.596,0.9843,0.596,1
	BoxLayout:
		id: box
		size: root.size
		
		FloatLayout:
		    Button:
				text: "Strona\nGowna"
				size_hint:0.34,0.06
				pos_hint:{"x":0,"y":0}
				on_release: app.root.current= "main"
				background_color:root.color
			Button:
				text: "Mapa"
				size_hint:0.34,0.06
				pos_hint:{"x":0.33,"y":0}
				on_release: app.root.current= "mapa"
				background_color:root.color
			Button:
				text: "Lista"
				size_hint:0.34,0.06
				pos_hint:{"x":0.66,"y":0}
				on_release: app.root.current= "lista"
				background_color:root.color
#############################################		
			
